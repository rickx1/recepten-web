<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>{{ title }}</title>
	<link rel="shortcut icon" href="../img/favicon.ico">
	<!-- Bootstrap 4.5 CSS -->
	<link rel="stylesheet" href="../css/bootstrap.min.css">
	<!-- Style CSS -->
	<link rel="stylesheet" href="../css/style.css">
	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700&display=swap" rel="stylesheet">
</head>
<body>

    {% include navbar %}

   	<!-- Recipes Heading -->
	<div class="col12 text-center mt-5">
		<h1 class="txt-dark pt-4">{{ title }}</h1>
		<div class="border-top border primairy w-50 mx-auto my-3"></div>
	</div>

    {{ content }}

    <div class="container">
        <div class="row">
        {% for recipe in collections.all %}
            {% if recipe.data.type == course %}
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="card mb-4">
                    <div class="card-body recipe-card">
                        <!-- Title -->
                        <h4><a href="{{ recipe.url}}">{{ recipe.data.title }}</a></h4>

                        <!-- Times -->

                        {% if recipe.data.preparation_time %}
                        <span><i class="fas fa-history mx-2" title="Voorbereidingstijd"></i>{{ recipe.data.preparation_time }}</span>
                        {% endif %}
                        {% if recipe.data.cooking_time %}
                        <span><i class="far fa-clock mr-2" title="Kooktijd"></i>{{ recipe.data.cooking_time }}</span>
                        {% endif %}

                        <!-- Tags -->
                        {% for tag in recipe.data.tags %}
                            {% case tag %}
                            {% when "meat" %}
                                <span><i class="fas fa-drumstick-bite mx-2"></i>Vlees</span>
                            {% when "vegetarian" %}
                                <span><i class="fas fa-seedling mx-1"></i>Vegetarisch</span>
                            {% when "fish" %}
                                <span><i class="fas fa-fish mx-2"></i>Vis</span>
                            {% when "vegetable" %}
                                <span><i class="fas fa-carrot mx-2"></i></i>Groente</span>

                            {% when "pastry" %}
                                <span><i class="fas fa-cheese mx-2"></i>Gebak</span>
                            {% when "hot" %}
                                <span><i class="fas fa-pepper-hot mx-2"></i></i>Heet</span>
                            {% when "extra hot" %}
                                <span><span class="mx-2"><i class="fas fa-pepper-hot"></i><i class="fas fa-pepper-hot"></i></i></span>Extra heet</span>
                            {% else %} 
                                <span><i class="fas fa-tag mx-2"></i>{{ tag }}</span>
                            {% endcase %}
                        {% endfor %}

                        <!-- Summary -->
                        {% if recipe.data.summary %}
                            <p></p>
                            <p>{{ recipe.data.summary }}</p>
                        {% endif%}
                    </div>
                </div>
            </div>
            {% endif %}
        {% endfor %}
        </div>
    </div>

    {% include footer %}
    
</body>
</html>